{application, erldist_filter, [
    {description, "erldist_filter: Erlang distribution filtering"},
    {vsn, "1.28.1"},
    {mod, {erldist_filter_app, []}},
    {modules, []},
    {registered, []},
    %% NOTE: Remember to sync changes to `applications` to
    %% the BUCK file in the application's base folder
    {applications, [
        kernel,
        stdlib,
        inets,
        ssl
    ]},
    {env, []},
    {doc, "doc"},
    {build_tools, ["mix", "rebar3"]},
    {exclude_patterns, [
        %% emacs temp files
        "~$",
        %% c object files
        "\\.o$",
        %% compiled NIF libraries
        "\\.dll$",
        "\\.dylib$",
        "\\.so$",
        %% make temp files
        "env\\.mk$",
        %% vim swap files
        "\\.swp$",
        %% Hex.pm package related
        "erldist_filter\\.app\\.src\\.script$",
        %% local development
        "erldist_filter_play\\.erl$"
    ]},
    {files, [
        "c_src",
        "CHANGELOG*",
        "include",
        "lib",
        "LICENSE*",
        "mix.exs",
        "priv",
        "README*",
        "rebar.config",
        "rebar.lock",
        "src"
    ]},
    {licenses, ["MIT"]},
    {links, #{
        "GitHub" => "https://github.com/WhatsApp/erldist_filter"
    }}
]}.
